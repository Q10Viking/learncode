<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--  为指定的包路径设置日志级别  -->
    <logger name="org.hzz.mapper" level="debug">
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>